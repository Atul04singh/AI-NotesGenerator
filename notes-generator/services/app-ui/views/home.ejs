<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Study Notes Dashboard</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header class="header">
      <h1>Study Notes Dashboard</h1>
    </header>

    <main class="dashboard">
      <% if (syllabuses.length === 0) { %>
      <p>No syllabus found.</p>
      <% } else { %>
      <div class="notes-grid">
        <% syllabuses.forEach(syllabus => { %>
        <a
          href="/notesOpened/<%= syllabus.customId %>"
          class="note-card"
          title="<%= syllabus.topic %>"
        >
          <div class="note-icon">ðŸ“’</div>
          <div class="note-title"><%= syllabus.topic %></div>
        </a>
        <% }) %>
      </div>
      <% } %>
    </main>
  </body>
</html>
